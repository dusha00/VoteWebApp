@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<VoteWebApp.Models.Person>;



<div class="container-fluid" id="main" style="background-color:#121a2a;height:100%">
    <div class="row" style="background-color:#f47920;color:white">
        <div class="col-xs-offset-1">
            <h2>Cloud meeting</h2>
        </div>
    </div>
    @foreach (var person in Model)
    {
        <div class="row" style="background-color:#121a2a;height:auto">
            <div class="col-xs-5 img" style="background-color:white;margin-top:10px;margin-bottom:10px;margin-left:10px">
                <img src="~/images/timg.jpg" height="120" width="100" style="margin-top:10px;margin-bottom:10px;" />
            </div>
            <div class="col-xs-6 text" style="background-color:white;margin-top:10px;margin-bottom:10px;height:140px;margin-left:10px">
                <div class="row">
                    <div class="col-xs-offset-1">
                        <p><strong>How to create the best customer experience.</strong></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-offset-1">
                        <p>@person.Name</p>
                    </div>
                </div>
                <div class="row" style="margin-bottom:10px;padding-right:10px">
                    <div class="col-xs-offset-8">
                        <button class="btn btn-info" onclick="GoToDetail()">投票</button>
                    </div>

                </div>
            </div>
        </div>
    }
    <script>
    function GoToDetail() {
        window.location = "/Detail/Index";
    }
    </script>
</div>
